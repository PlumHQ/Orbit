{
  "name": "@plumhq/design-system",
  "version": "1.0.0",
  "description": "Plum's comprehensive design system for healthcare applications",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles.css"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AdityaPlum/design-system.git"
  },
  "homepage": "https://github.com/AdityaPlum/design-system#readme",
  "bugs": {
    "url": "https://github.com/AdityaPlum/design-system/issues"
  },
  "author": "Plum Team <contact@plumhq.com>",
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "tailwind",
    "components",
    "healthcare",
    "plum"
  ],
  "scripts": {
    "build": "vite build",
    "build:types": "tsc --project tsconfig.build.json",
    "dev": "vite",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:serve": "npx http-server storybook-static",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "prepare": "npm run build",
    "release": "npm run build && changeset publish"
  },
  "private": false,
  "dependencies": {
    "@fontsource/inter": "^5.2.5",
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "tailwind-merge": "^3.3.0",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.33.0",
    "glob": "^11.0.3",
    "storybook": "^8.6.14",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vitest": "^3.2.4"
  }
}
