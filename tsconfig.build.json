{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "src/**/*",
    "design-system-test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "**/*.stories.tsx",
    "**/*.composition.tsx",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
